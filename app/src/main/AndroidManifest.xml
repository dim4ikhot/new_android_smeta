    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <data android:mimeType="android_smeta/zml" />
                <data android:mimeType="android_smeta/arp" />
                <data android:mimeType="android_smeta/cpln" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EditingList"
            android:label="@string/edit_group">
            <intent-filter>
                <action android:name="ua.com.expertsoft.editGroupOpen" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddNewTasks"
            android:theme="@style/AppTheme.NoActionBar"
            android:uiOptions="splitActionBarWhenNarrow">
            <intent-filter>
                <action android:name="ua.com.expertsoft.addNewTask" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ListOfOnlineCadBuilders"
            android:label="@string/title_activity_list_of_online_cad_builders"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="ua.com.expertsoft.ListOfOnlineCadBuilders" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ShowWorksActivity"
            android:label="@string/title_activity_show_works"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="ua.com.expertsoft.ShowWorksActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ShowWorksParam"
            android:label="@string/title_activity_show_works_param"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="ua.com.expertsoft.ShowWorksParam" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ShowFacts"
            android:label="@string/title_activity_show_facts"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ViewPhotosActivity"
            android:label="@string/title_activity_view_photos"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar.FullScreen">

            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.MAIN" /> -->


            <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            <!-- </intent-filter> -->
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".settings.SettingsActivity"
            android:label="@string/preference_main" />
        <activity
            android:name=".custom_calendar.CalendarShower"
            android:label="CALENDAR" />
        <activity
            android:name=".custom_calendar.ViewCalendarTasks"
            android:label="@string/title_activity_view_calendar_tasks"
            android:theme="@style/AppTheme.NoActionBar" />

        <service android:name=".custom_calendar.ShowNotification">

            <!-- android:process=":notifications_listener"> -->
            <!-- android:enabled="true" -->
            <!-- android:exported="true"> -->

        </service>

        <activity
            android:name=".EditResourceActivity"
            android:label="@string/title_activity_edit"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".SheetActivity"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateHidden"></activity>
        <activity
            android:name=".tweet.TwitterActivity"
            android:label="@string/title_activity_twitter"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="x-oauthflow-twitter" android:host="twitterlogin"/>
            </intent-filter>

        </activity>
    </application>

</manifest>